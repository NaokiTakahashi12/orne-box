<?xml version="1.0"?>

<!-- Revolute-Revolute Manipulator -->
<robot name="icart_box" xmlns:xacro="http://www.ros.org/wiki/xacro">
 
  <!-- Constants for robot dimensions -->
  <xacro:property name="PI" value="3.1415926535897931"/>

  <!-- Import Rviz colors -->
  <xacro:include filename="$(find icart_mini_description)/urdf/materials.xacro"/>
  <xacro:include filename="$(find orne_description)/urdf/orne_x.gazebo"/>

  <!-- Base Link -->
  <link name="base_link">

    <visual>
      <origin xyz="-0.03 0 0.0705" rpy="0 0 0"/>
      <geometry>
	<!-- <box size=".40 .42 .134"/> -->
	<mesh filename="package://orne_description/meshes/orne_box_stl/base.stl" scale="1 1 1"/>
      </geometry>
      <material name="silver">
        <color rgba="${192/255} ${192/255} ${192/255} 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0.15 0.0  0.2" rpy="0 0 0"/>
      <geometry>
	<box size=".60 .40 .3"/>
	<!-- <mesh filename="package://orne_description/meshes/orne_box_stl/base.stl" scale="1 1 1"/> -->
      </geometry>
    </collision>

    <collision>
      <origin xyz="0.301 -0.141  0.075" rpy="0 1.57 1.57"/>
      <geometry>
	<cylinder length="0.03" radius="0.075"/>
      </geometry>
    </collision>

    <collision>
      <origin xyz="0.301 0.141  0.075" rpy="0 1.57 1.57"/>
      <geometry>
	<cylinder length="0.03" radius="0.075"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="20" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>

  </link>

  <!-- left wheel -->
  <link name="visual_left_wheel">
      
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <!-- <cylinder  length="0.03" radius="0.151"/> -->
        <mesh filename="package://orne_description/meshes/wheels/tire.stl" scale="1 1 1"/>
      </geometry>
      <material name="dark">
        <color rgba="0.1 0.1 0.1 1.5"/>
      </material>
    </visual>

  </link>

  <joint type="fixed" name="visual_left_wheel_hinge">
    <!-- <origin xyz="0.045 0.223 0.1518" rpy="0 0 0"/> -->
    <origin xyz="0 0.23 0.1518" rpy="0 0 0"/>
    <child link="visual_left_wheel">visual_left_wheel</child>
    <parent link="base_link">base_link</parent>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="left_wheel">

    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <cylinder length="0.03" radius="0.151" />
	<!-- <mesh filename="package://orne_description/meshes/wheels/tire.stl" scale="1 1 1"/> -->
      </geometry>
    </collision>

    <inertial>
      <mass value="1" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>

  </link>

  <joint type="revolute" name="left_wheel_hinge">
    <!-- <origin xyz="0.045 0.223 0.1518" rpy="0 0 0"/> -->
    <origin xyz="0 0.23 0.1518" rpy="0 0 0"/>
    <child link="left_wheel">left_wheel</child>
    <parent link="base_link">base_link</parent>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="100.0" lower="-5000" upper="5000" />
  </joint>

  <!-- right wheel -->
  <link name="visual_right_wheel">

    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <!-- <cylinder  length="0.03" radius="0.151"/> -->
        <mesh filename="package://orne_description/meshes/wheels/tire.stl" scale="1 1 1"/>
      </geometry>
      <material name="dark"/>
    </visual>

  </link>

  <joint type="fixed" name="visual_right_wheel_hinge">
    <!-- <origin xyz="-0.045 -0.223 0.1518" rpy="0 0 0"/> -->
    <origin xyz="0 -0.23 0.1518" rpy="0 0 0"/>
    <child link="visual_right_wheel">visual_right_wheel</child>
    <parent link="base_link">base_link</parent>
    <axis xyz="0 1 0"/>
  </joint>
  
  <link name="right_wheel">

    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <cylinder length="0.03" radius="0.151" />
<!-- 
	<mesh filename="package://orne_description/meshes/wheels/tire.stl" scale="1 1 1"/>
-->
      </geometry>
    </collision>

    <inertial>
      <mass value="1" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>

  </link>

  <joint type="revolute" name="right_wheel_hinge">
    <!-- <origin xyz="0.045 0.223 0.1518" rpy="0 0 0"/> -->
    <origin xyz="0 -0.23 0.1518" rpy="0 0 0"/>
    <child link="right_wheel">right_wheel</child>
    <parent link="base_link">base_link</parent>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="100.0" lower="-5000" upper="5000" />
  </joint>

  <transmission name="tran1">
    <type>transmission_interface/SimpleTransmission</type>

    <joint name="left_wheel_hinge">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>

    <actuator name="left_motor">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>

  </transmission>

  <transmission name="tran2">
    <type>transmission_interface/SimpleTransmission</type>

    <joint name="right_wheel_hinge">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
  
    <actuator name="right_motor">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>

  </transmission>

</robot>

